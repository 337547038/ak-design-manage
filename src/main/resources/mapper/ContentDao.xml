<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.ak.dao.ContentDao">

    <select id="count" resultType="java.lang.Long" parameterType="map">
        select count(1)
        from `${tableName}`
        <where>
            <foreach item="item" index="index" collection="query" separator=" and ">
                <if test="item.value != null and item.value!=''">
                    ${item.key}=#{item.value}
                </if>
            </foreach>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit">
        select
        <choose>
            <when test="extend.columns != null and extend.columns!=''">
                ${extend.columns}
            </when>
            <otherwise>
                *
            </otherwise>
        </choose>
        from `${extend.tableName}`
         <where>
          <foreach item="item" index="index" collection="query" separator=" and ">
              <if test="item.value != null and item.value!='' and item.search=='1'">
              ${item.key} LIKE CONCAT('%', #{item.value}, '%')
              </if>
              <if test="item.value != null and item.value!='' and item.search==null">
                  ${item.key}=#{item.value}
              </if>
          </foreach>
         </where>
        <choose>
            <when test="extend.sort != null and extend.sort!=''">
                order by ${extend.sort}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="extend.pageSize >0">
            limit #{extend.pageIndex}, #{extend.pageSize}
        </if>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into `${tableName}`
        <foreach item="item" index="index" collection="params" open="(" separator="," close=")">
            `${item.key}`
        </foreach>
        values
        <foreach item="item" index="index" collection="params" open="(" separator="," close=")">
            #{item.value}
        </foreach>
    </insert>
<!--    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into `ak-test`
        (`text`, `textarea`, `radio`, `checkbox`, `select1`, `creatTime`, `color`, `status`, `number`, `cascader`, `rate`, `slider`, `tree`, `table`, `components`, `upload`, `tinymce`, `flex`, `userName`, `prepend`, `append`, `password`, `input1`, `input2`)
        values
            ('text','textarea', 1,'checkbox','select1','2023-11-15','color',1,1,'cascader',1,'slider','tree','table','components','upload','tinymce','flex','userName','prepend','append','password','input1', 1)
    </insert>-->

    <!--查询单个-->
    <select id="queryById">
        select * from `${tableName}` where id = #{id}
    </select>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from ak-customer where id in
        <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </delete>

</mapper>
