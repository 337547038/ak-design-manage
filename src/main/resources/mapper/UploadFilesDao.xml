<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.design.ak.dao.UploadFilesDao">

        <resultMap type="com.design.ak.entity.UploadFiles" id="UploadFilesMap">
                <result property="id" column="id" jdbcType="INTEGER"/>
                <result property="fileName" column="fileName" jdbcType="VARCHAR"/>
                <result property="fileUrl" column="fileUrl" jdbcType="VARCHAR"/>
                <result property="userId" column="userId" jdbcType="INTEGER"/>
                <result property="creatTime" column="creatTime" jdbcType="TIMESTAMP"/>
                <result property="md5" column="md5" jdbcType="VARCHAR"/>
                <result property="groupId" column="groupId" jdbcType="INTEGER"/>
                <result property="size" column="size" jdbcType="INTEGER"/>
        </resultMap>

    <sql id="commColumnsItem">
id, fileName, fileUrl, userId, creatTime, md5, groupId, size        
    </sql>
        <!--查询单个-->
        <select id="queryById" resultMap="UploadFilesMap">
            select
            <include refid="commColumnsItem" />
            from sys_upload_files
                where id = #{id}
        </select>

        <!--查询指定行数据-->
        <select id="queryAllByLimit">
            select
            <choose>
                <when test="extend.columns != null and extend.columns!=''">
                    ${extend.columns}
                </when>
                <otherwise>
                    <include refid="commColumnsItem" />
                </otherwise>
            </choose>
            from sys_upload_files
            <where>
                    <if test="query.id != null">
                        and id = #{query.id}
                    </if>
                    <if test="query.fileName != null and query.fileName != ''">
                        and fileName LIKE CONCAT('%', #{query.fileName}, '%')
                    </if>
                    <if test="query.fileUrl != null and query.fileUrl != ''">
                        and fileUrl = #{query.fileUrl}
                    </if>
                    <if test="query.userId != null">
                        and userId = #{query.userId}
                    </if>
                    <if test="query.creatTime != null">
                        and creatTime = #{query.creatTime}
                    </if>
                    <if test="query.md5 != null and query.md5 != ''">
                        and md5 = #{query.md5}
                    </if>
                    <if test="query.groupId != null">
                        and groupId = #{query.groupId}
                    </if>
                    <if test="query.size != null">
                        and size = #{query.size}
                    </if>
            </where>
            <choose>
                <when test="extend.sort != null and extend.sort!=''">
                    order by ${extend.sort}
                </when>
                <otherwise>
                    order by id desc
                </otherwise>
            </choose>
            <if test="extend.pageSize >0">
            limit #{extend.pageIndex}, #{extend.pageSize}
            </if>
        </select>

        <!--统计总行数-->
        <select id="count" resultType="java.lang.Long">
            select count(1)
            from sys_upload_files
            <where>
                    <if test="id != null">
                        and id = #{id}
                    </if>
                    <if test="fileName != null and fileName != ''">
                        and fileName = #{fileName}
                    </if>
                    <if test="fileUrl != null and fileUrl != ''">
                        and fileUrl = #{fileUrl}
                    </if>
                    <if test="userId != null">
                        and userId = #{userId}
                    </if>
                    <if test="creatTime != null">
                        and creatTime = #{creatTime}
                    </if>
                    <if test="md5 != null and md5 != ''">
                        and md5 = #{md5}
                    </if>
                    <if test="groupId != null">
                        and groupId = #{groupId}
                    </if>
                    <if test="size != null">
                        and size = #{size}
                    </if>
            </where>
        </select>

        <!--新增所有列-->
        <insert id="insert" keyProperty="id" useGeneratedKeys="true">
            insert into sys_upload_files(fileName, fileUrl, userId, creatTime, md5, groupId, size)
                values
            (#{fileName}, #{fileUrl}, #{userId}, #{creatTime}, #{md5}, #{groupId}, #{size})
        </insert>

        <!--通过主键修改数据-->
        <update id="updateById">
            update sys_upload_files
            <set>
                    <if test="fileName != null and fileName != ''">
                        fileName = #{fileName},
                    </if>
                    <if test="fileUrl != null and fileUrl != ''">
                        fileUrl = #{fileUrl},
                    </if>
                    <if test="userId != null">
                        userId = #{userId},
                    </if>
                    <if test="creatTime != null">
                        creatTime = #{creatTime},
                    </if>
                    <if test="md5 != null and md5 != ''">
                        md5 = #{md5},
                    </if>
                    <if test="groupId != null">
                        groupId = #{groupId},
                    </if>
                    <if test="size != null">
                        size = #{size},
                    </if>
            </set>
            where id = #{id}
        </update>

        <!--通过主键删除-->
        <delete id="deleteById">
            delete
            from sys_upload_files where id in
            <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
        </delete>

    <delete id="deleteByHash">
        delete from sys_upload_files where md5 =#{hash}
    </delete>

    </mapper>
