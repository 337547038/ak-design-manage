<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.design.ak.dao.UploadGroupDao">

        <resultMap type="com.design.ak.entity.UploadGroup" id="UploadGroupMap">
                <result property="id" column="id" jdbcType="INTEGER"/>
                <result property="name" column="name" jdbcType="VARCHAR"/>
                <result property="creatTime" column="creatTime" jdbcType="TIMESTAMP"/>
                <result property="userId" column="userId" jdbcType="INTEGER"/>
        </resultMap>

    <sql id="commColumnsItem">
id, name, creatTime, userId        
    </sql>
        <!--查询单个-->
        <select id="queryById" resultMap="UploadGroupMap">
            select
            <include refid="commColumnsItem" />
            from sys_upload_group
                where id = #{id}
        </select>

        <!--查询指定行数据-->
        <select id="queryAllByLimit">
            select
            <choose>
                <when test="extend.columns != null and extend.columns!=''">
                    ${extend.columns}
                </when>
                <otherwise>
                    <include refid="commColumnsItem" />
                </otherwise>
            </choose>
            from sys_upload_group
            <where>
                    <if test="query.id != null">
                        and id = #{query.id}
                    </if>
                    <if test="query.name != null and query.name != ''">
                        and name = #{query.name}
                    </if>
                    <if test="query.creatTime != null">
                        and creatTime = #{query.creatTime}
                    </if>
                    <if test="query.userId != null">
                        and userId = #{query.userId}
                    </if>
            </where>
            <choose>
                <when test="extend.sort != null and extend.sort!=''">
                    order by ${extend.sort}
                </when>
                <otherwise>
                    order by id desc
                </otherwise>
            </choose>
            <if test="extend.pageSize >0">
            limit #{extend.pageIndex}, #{extend.pageSize}
            </if>
        </select>

        <!--统计总行数-->
        <select id="count" resultType="java.lang.Long">
            select count(1)
            from sys_upload_group
            <where>
                    <if test="id != null">
                        and id = #{id}
                    </if>
                    <if test="name != null and name != ''">
                        and name = #{name}
                    </if>
                    <if test="creatTime != null">
                        and creatTime = #{creatTime}
                    </if>
                    <if test="userId != null">
                        and userId = #{userId}
                    </if>
            </where>
        </select>

        <!--新增所有列-->
        <insert id="insert" keyProperty="id" useGeneratedKeys="true">
            insert into sys_upload_group(name, creatTime, userId)
                values
            (#{name}, #{creatTime}, #{userId})
        </insert>

        <!--通过主键修改数据-->
        <update id="updateById">
            update sys_upload_group
            <set>
                    <if test="name != null and name != ''">
                        name = #{name},
                    </if>
                    <if test="creatTime != null">
                        creatTime = #{creatTime},
                    </if>
                    <if test="userId != null">
                        userId = #{userId},
                    </if>
            </set>
            where id = #{id}
        </update>

        <!--通过主键删除-->
        <delete id="deleteById">
            delete
            from sys_upload_group where id in
            <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
        </delete>

    </mapper>
