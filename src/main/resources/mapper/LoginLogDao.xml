<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.design.ak.dao.LoginLogDao">

        <resultMap type="com.design.ak.entity.LoginLog" id="LoginLogMap">
                <result property="id" column="id" jdbcType="INTEGER"/>
                <result property="userName" column="userName" jdbcType="VARCHAR"/>
                <result property="loginIp" column="loginIp" jdbcType="VARCHAR"/>
                <result property="remark" column="remark" jdbcType="VARCHAR"/>
                <result property="dateTime" column="dateTime" jdbcType="TIMESTAMP"/>
                <result property="status" column="status" jdbcType="INTEGER"/>
        </resultMap>

    <sql id="commColumnsItem">
id, userName, loginIp, remark, dateTime, status        
    </sql>
        <!--查询单个-->
        <select id="queryById" resultMap="LoginLogMap">
            select
            <include refid="commColumnsItem" />
            from sys_login_log
                where id = #{id}
        </select>

        <!--查询指定行数据-->
        <select id="queryAllByLimit" resultMap="LoginLogMap">
            select
            <include refid="commColumnsItem" />
            from sys_login_log
            <where>
                    <if test="query.id != null">
                        and id = #{query.id}
                    </if>
                    <if test="query.userName != null and query.userName != ''">
                        and userName = #{query.userName}
                    </if>
                    <if test="query.loginIp != null and query.loginIp != ''">
                        and loginIp = #{query.loginIp}
                    </if>
                    <if test="query.remark != null and query.remark != ''">
                        and remark = #{query.remark}
                    </if>
                    <if test="query.dateTime != null">
                        and dateTime = #{query.dateTime}
                    </if>
                    <if test="query.status != null">
                        and status = #{query.status}
                    </if>
            </where>
            <choose>
                <when test="pageInfo.sort != null and pageInfo.sort!=''">
                    order by ${pageInfo.sort}
                </when>
                <otherwise>
                    order by id desc
                </otherwise>
            </choose>
            <if test="pageInfo.pageSize >0">
            limit #{pageInfo.pageIndex}, #{pageInfo.pageSize}
            </if>
        </select>

        <!--统计总行数-->
        <select id="count" resultType="java.lang.Long">
            select count(1)
            from sys_login_log
            <where>
                    <if test="id != null">
                        and id = #{id}
                    </if>
                    <if test="userName != null and userName != ''">
                        and userName = #{userName}
                    </if>
                    <if test="loginIp != null and loginIp != ''">
                        and loginIp = #{loginIp}
                    </if>
                    <if test="remark != null and remark != ''">
                        and remark = #{remark}
                    </if>
                    <if test="dateTime != null">
                        and dateTime = #{dateTime}
                    </if>
                    <if test="status != null">
                        and status = #{status}
                    </if>
            </where>
        </select>

        <!--新增所有列-->
        <insert id="insert" keyProperty="id" useGeneratedKeys="true">
            insert into sys_login_log(userName, loginIp, remark, dateTime, status)
                values
            (#{userName}, #{loginIp}, #{remark}, #{dateTime}, #{status})
        </insert>

        <!--通过主键修改数据-->
        <update id="updateById">
            update sys_login_log
            <set>
                    <if test="userName != null and userName != ''">
                        userName = #{userName},
                    </if>
                    <if test="loginIp != null and loginIp != ''">
                        loginIp = #{loginIp},
                    </if>
                    <if test="remark != null and remark != ''">
                        remark = #{remark},
                    </if>
                    <if test="dateTime != null">
                        dateTime = #{dateTime},
                    </if>
                    <if test="status != null">
                        status = #{status},
                    </if>
            </set>
            where id = #{id}
        </update>

        <!--通过主键删除-->
        <delete id="deleteById">
            delete
            from sys_login_log where id in
            <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
        </delete>

    </mapper>
